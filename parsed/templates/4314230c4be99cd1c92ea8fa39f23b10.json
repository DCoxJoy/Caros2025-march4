{"components/themevale/ask-an-expert":"<!-- BEGIN ASK AN EXPERT MODAL -->\r\n<div id=\"ask-an-expert\" class=\"modal\" data-reveal>\r\n    <div class=\"modal-content\">\r\n        <div class=\"modal-header\">\r\n            {{#if theme_settings.halo_ask_an_expert_title}}\r\n                <h2 class=\"modal-header-title\">{{theme_settings.halo_ask_an_expert_title}}</h2>\r\n            {{/if}}\r\n            <a href=\"#\" class=\"modal-close\" aria-label=\"{{lang 'common.close'}}\" role=\"button\">\r\n                <span aria-hidden=\"true\">&#215;</span>\r\n            </a>\r\n        </div>\r\n        <div class=\"modal-body\">\r\n            <div id=\"contact_results\"></div>\r\n            <div class=\"form-inner\">\r\n                {{#if theme_settings.halo_ask_an_expert_desc1}}\r\n                    <div class=\"description\">{{theme_settings.halo_ask_an_expert_desc1}}</div>\r\n                {{/if}}\r\n                {{#if theme_settings.halo_ask_an_expert_desc2}}\r\n                    <div class=\"question\">{{theme_settings.halo_ask_an_expert_desc2}}</div>\r\n                {{/if}}\r\n                <div id=\"halo-ask-an-expert-results\" class=\"halo-ask-an-expert-text\"></div>\r\n                <form data-contact-form class=\"halo-ask-an-expert-form\" action=\"{{urls.contact_us_submit}}\"\r\n                    method=\"post\" data-product-id=\"{{product.id}}\" data-product-title=\"{{product.title}}\"\r\n                    data-product-url=\"{{product.url}}\" data-product-sku=\"{{product.sku}}\">\r\n                    <fieldset class=\"form-fieldset\">\r\n                        <div class=\"hl-form-field-wrapper\"></div>\r\n                        <div class=\"form-field form-field-radio\">\r\n                            <label class=\"form-label\">Do you need:</label>\r\n                            <input class=\"form-radio\" id=\"pricing-radio\" type=\"radio\" name=\"type_package\" checked\r\n                                value=\"Pricing\">\r\n                            <label class=\"form-label\" for=\"pricing-radio\">Pricing</label>\r\n                            <input class=\"form-radio\" id=\"answers-radio\" type=\"radio\" name=\"type_package\"\r\n                                value=\"Answers\">\r\n                            <label class=\"form-label\" for=\"answers-radio\">Answers</label>\r\n                            <input class=\"form-radio\" id=\"both-radio\" type=\"radio\" name=\"type_package\"\r\n                                value=\"Pricing & Answers\">\r\n                            <label class=\"form-label\" for=\"both-radio\">Both</label>\r\n                        </div>\r\n                        <div class=\"form-field\">\r\n                            <label class=\"form-label\" for=\"contact_comment_area\">What can i help you with today?\r\n                                <small>{{lang 'common.required' }}</small>\r\n                            </label>\r\n                            <textarea name=\"contact_comment_area\" cols=\"30\" rows=\"3\" class=\"form-input\"\r\n                                id=\"contact_comment_area\" required></textarea>\r\n                        </div>\r\n                        <div class=\"form-field form-field-radio form-field-radio2\">\r\n                            <label class=\"form-label form-label-custom\">How would you like me to contact you?</label>\r\n                            <input class=\"form-radio\" id=\"phone-radio\" type=\"radio\" name=\"type_contact\" checked\r\n                                value=\"Phone\">\r\n                            <label class=\"form-label\" for=\"phone-radio\">Phone</label>\r\n                            <input class=\"form-radio\" id=\"email-radio\" type=\"radio\" name=\"type_contact\" value=\"Email\">\r\n                            <label class=\"form-label\" for=\"email-radio\">Email</label>\r\n                            <input class=\"form-radio\" id=\"both-radio-2\" type=\"radio\" name=\"type_contact\"\r\n                                value=\"Phone & Email\">\r\n                            <label class=\"form-label\" for=\"both-radio-2\">Both</label>\r\n                        </div>\r\n                        <div class=\"hl-form-field\" style=\"display: none;\">\r\n                            <textarea name=\"contact_question\" cols=\"30\" rows=\"3\" class=\"form-input\"\r\n                                id=\"contact_question\"></textarea>\r\n                        </div>\r\n                        <div class=\"g-recaptcha\" data-sitekey=\"6LcjX0sbAAAAACp92-MNpx66FT4pbIWh-FTDmkkz\"></div>\r\n                        <div class=\"form-actions\">\r\n                            <button type=\"submit\" class=\"button button--primary\" id=\"halo-ask-an-expert-button\">Send\r\n                                Question</button>\r\n                        </div>\r\n                    </fieldset>\r\n                </form>\r\n                <script src=\"https://www.google.com/recaptcha/api.js\" async=\"\" defer=\"\"></script>\r\n            </div>\r\n        </div>\r\n    </div>\r\n</div>\n"}
